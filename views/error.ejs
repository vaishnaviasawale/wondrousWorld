<!-- Template to respond to an error -->
<% layout('/layouts/boilerplate') %>
<div class="row">
    <div class="col-6 offset-3" style="margin-top: 3%">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><%= err.message %></h4>
            <p><%= err.stack %></p>
            <hr>
            <p class="mb-0"><%= err.status %></p>
        </div>
    </div>
</div>
